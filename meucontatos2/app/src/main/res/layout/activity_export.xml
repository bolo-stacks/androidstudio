<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textExportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha a opção para exportar o contato"
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btnExportarWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar para WhatsApp"
        android:onClick="exportarParaWhatsApp" />

    <Button
        android:id="@+id/btnExportarEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar para E-mail"
        android:onClick="exportarParaEmail" />
</LinearLayout>
