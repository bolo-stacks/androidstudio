<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_baitaca"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/baitaca"
                android:layout_marginHorizontal="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baitaca"
                android:textSize="18sp"
                android:layout_below="@+id/img_baitaca"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_gaucho"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/gaucho_fronteira"
                android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaucho da Fronteira"
                android:textSize="18sp"
                android:layout_below="@+id/img_gaucho"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_mano"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/mano_lima"
                android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mano Lima"
                android:textSize="18sp"
                android:layout_below="@+id/img_mano"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>